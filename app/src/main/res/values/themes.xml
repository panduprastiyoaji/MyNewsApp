<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.MyNews" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/blue_day</item>
        <item name="colorPrimaryVariant">@color/blue_day</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/blue_day</item>
        <item name="colorSecondaryVariant">@color/navi</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.MyNews.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NewsApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.NewsApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>