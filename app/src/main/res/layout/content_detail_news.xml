<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.detail.DetailNewsActivity"
    tools:showIn="@layout/activity_detail_news">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_Author"
            android:textSize="18sp"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/baseline_account_circle_24"
            android:layout_marginStart="@dimen/text_margin"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/tvAuthorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_margin"
            android:text="@string/text_subtitle"
            tools:ignore="RtlCompat" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_Publish"
            android:textSize="18sp"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/baseline_access_time_24"
            android:layout_marginTop="@dimen/text_margin"
            android:layout_marginStart="@dimen/text_margin"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/tvPublishText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_margin"
            android:text="@string/text_subtitle"
            tools:ignore="RtlCompat" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_Content"
            android:textSize="18sp"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/baseline_newspaper_24"
            android:layout_marginTop="@dimen/text_margin"
            android:layout_marginStart="@dimen/text_margin"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/tvContentText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_margin"
            android:text="@string/text_subtitle"
            tools:ignore="RtlCompat" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_Desc"
            android:textStyle="bold"
            android:textSize="18sp"
            app:drawableStartCompat="@drawable/baseline_draw_24"
            android:layout_marginTop="@dimen/text_margin"
            android:layout_marginStart="@dimen/text_margin"
            tools:ignore="RtlCompat" />
        <TextView
            android:id="@+id/tvDescriptionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_margin"
            android:text="@string/text_subtitle"
            tools:ignore="RtlCompat" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>